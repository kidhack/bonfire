{
  "name": "bonfire",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "storybook": "turbo run storybook",
    "format": "prettier --check .",
    "dev:clean": "rm -f apps/web/.next/dev/lock && echo \"If port is in use, run: pnpm web:ports\"",
    "dev:nuke": "rm -rf apps/web/.next apps/web/.turbo .turbo",
    "db:migrate": "pnpm --filter @bonfire/db prisma:migrate",
    "db:seed": "pnpm --filter @bonfire/db seed",
    "web:dev": "pnpm dev:clean && pnpm --filter @bonfire/web dev",
    "web:ports": "lsof -i :3000-3010 || true",
    "web:kill": "lsof -ti :3000-3010 | sort -u | awk '{print \"kill -9 \"$1}' || true"
  },
  "packageManager": "pnpm@10.28.1",
  "pnpm": {
    "overrides": {
      "@storybook/*": "8.6.14"
    }
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@storybook/addon-a11y": "8.6.14",
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/react-vite": "8.6.14",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@types/node": "25.0.9",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "8.53.1",
    "@typescript-eslint/parser": "8.53.1",
    "autoprefixer": "10.4.23",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.4",
    "jsdom": "27.4.0",
    "postcss": "8.5.6",
    "prettier": "^3.8.0",
    "storybook": "8.6.14",
    "tailwindcss": "3.4.19",
    "turbo": "2.7.5",
    "typescript": "5.9.3",
    "vite": "^6.0.0",
    "vitest": "4.0.17"
  }
}
